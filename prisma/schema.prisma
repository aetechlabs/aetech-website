// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  bio           String?
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  postLikes     PostLike[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  slug        String   @unique
  description String?
  color       String   @default("#c1272d")
  posts       Post[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String      @unique
  excerpt     String?
  content     String
  coverImage  String?
  published   Boolean     @default(false)
  featured    Boolean     @default(false)
  views       Int         @default(0)
  likes       Int         @default(0)
  readingTime Int?
  seoTitle    String?
  seoDescription String?
  tags        String[]
  authorId    String      @db.ObjectId
  categoryId  String      @db.ObjectId
  author      User        @relation(fields: [authorId], references: [id])
  category    Category    @relation(fields: [categoryId], references: [id])
  comments    Comment[]
  postLikes   PostLike[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?
}

model Comment {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  content        String
  approved       Boolean     @default(false)
  postId         String      @db.ObjectId
  authorId       String?     @db.ObjectId
  anonymousName  String?
  anonymousEmail String?
  parentId       String?     @db.ObjectId
  post           Post        @relation(fields: [postId], references: [id], onDelete: Cascade)
  author         User?       @relation(fields: [authorId], references: [id])
  parent         Comment?    @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies        Comment[]   @relation("CommentReplies")
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model PostLike {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  postId      String   @db.ObjectId
  userId      String?  @db.ObjectId
  ipAddress   String?  // For anonymous likes
  createdAt   DateTime @default(now())
  
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id])
  
  @@unique([postId, userId])
  @@unique([postId, ipAddress])
}

model Contact {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String?
  country   String?
  subject   String
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum Role {
  USER
  ADMIN
  AUTHOR
  STUDENT
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model BootcampEnrollment {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName           String
  lastName            String
  email               String
  phone               String
  age                 String
  educationLevel      String
  coursesInterested   String[]
  hasLaptop           String
  experience          String?
  motivation          String
  heardAbout          String?
  status              EnrollmentStatus @default(PENDING)
  
  // New fields for enhanced management
  adminNotes          String?
  assignedCourse      String?
  approvalDate        DateTime?
  scheduleUrl         String? // Cloudinary URL for timetable
  offerLetterUrl      String? // Cloudinary URL for offer letter
  offerLetterSent     Boolean @default(false)
  scheduleSent        Boolean @default(false)
  socialMediaInstructionsSent Boolean @default(false)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// New model for bootcamp management settings
model BootcampSettings {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  currentScheduleUrl  String? // Current timetable URL
  templateOfferLetterUrl String? // Template offer letter URL
  batchName           String?
  batchStartDate      DateTime?
  batchEndDate        DateTime?
  maxEnrollments      Int?
  socialMediaInstructions String? // Custom instructions for social media
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

enum EnrollmentStatus {
  PENDING
  APPROVED
  REJECTED
  WAITLISTED
}

model Volunteer {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  email                 String
  phone                 String?
  experience            String
  interests             String[]
  availability          String
  motivation            String
  skills                String?
  previousVolunteering  String?
  status                VolunteerStatus @default(PENDING)
  notes                 String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

enum VolunteerStatus {
  PENDING
  APPROVED
  REJECTED
  ACTIVE
  INACTIVE
}

model Sponsor {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  logoUrl     String?
  websiteUrl  String?
  tier        SponsorTier @default(BRONZE)
  isActive    Boolean     @default(true)
  order       Int         @default(0)
  contactName String?
  contactEmail String?
  startDate   DateTime?
  endDate     DateTime?
  
  // Additional fields for sponsorship applications
  organizationType String?
  phone           String?
  country         String?
  amount          String?
  interests       String[] // Array of interest areas
  applicationMessage String? // Custom message from applicant
  paymentMethod   String?
  applicationStatus String? @default("PENDING") // PENDING, APPROVED, REJECTED
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum SponsorTier {
  PLATINUM
  GOLD
  SILVER
  BRONZE
  COMMUNITY
  CUSTOM
}

model Banner {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  type              BannerType
  title             String
  message           String
  isActive          Boolean     @default(true)
  priority          Int         @default(1) // Higher number = higher priority
  startDate         DateTime?   // When to start showing banner
  endDate           DateTime?   // When to stop showing banner
  backgroundColor   String      @default("#c1272d")
  textColor         String      @default("#ffffff")
  linkUrl           String?     // Optional call-to-action link
  linkText          String?     // Text for the CTA button
  showCountdown     Boolean     @default(false)
  countdownDeadline DateTime?   // Deadline for countdown timer
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

enum BannerType {
  TOP_ANNOUNCEMENT  // TopAnnouncementBanner
  BOOTCAMP         // BootcampBanner
  URGENCY          // UrgencyBanner
  GENERAL          // Generic banner
}

// Attendance tracking models
model AttendanceSession {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String   // e.g., "Day 1 - JavaScript Fundamentals"
  description     String?  // Optional description of the session
  course          String?  // The specific course this session is for (made optional for migration)
  question        String   // The attendance question
  correctAnswer   String   // The correct answer (case insensitive)
  meetingDate     DateTime // Date of the meeting
  expiresAt       DateTime // When students can no longer submit
  isActive        Boolean  @default(true)
  emailSent       Boolean  @default(false)
  
  // Relations
  responses       AttendanceResponse[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("attendance_sessions")
}

model AttendanceResponse {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId       String   @db.ObjectId
  studentEmail    String   // Student's email
  studentName     String   // Student's full name
  submittedAnswer String   // Their submitted answer
  isCorrect       Boolean  // Whether answer matches
  submittedAt     DateTime @default(now())
  ipAddress       String?  // Track IP for security
  
  // Relations
  session         AttendanceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  // Ensure one response per student per session
  @@unique([sessionId, studentEmail])
  @@map("attendance_responses")
}
